	<script type="text/javascript">
		function createWallet() {
			axios({
				method: 'get',
				url: 'http://localhost:6969/create-new-wallet'
			}).then(res => {
				console.log('new wallet', res.data);
				if (res.data.privKey && res.data.pubKey && res.data.vinAddress) {
					localStorage.setItem("privKey", res.data.privKey);
					localStorage.setItem("pubKey", res.data.pubKey);
					localStorage.setItem("vinAddress", res.data.vinAddress);
					window.location.href = "/";
				}
			}).catch(err => console.log(err));
		}
		window.onload = function (e) {
			let privKey = localStorage.getItem("privKey");
			let pubKey = localStorage.getItem("pubKey");
			let vinAddress = localStorage.getItem("vinAddress");
			if (privKey && vinAddress && pubKey) {
				window.location.href = "/transaction";
			}
		}

		document.addEventListener('DOMContentLoaded', function () {
			setTimeout(function () {
				document.getElementById("loading").style.display = "none";
				document.getElementById("content").style.display = "block";
			}, 1000);
		}, false);
